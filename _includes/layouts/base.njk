<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ site.title }}
    {% if subtitle %}
      : {{ subtitle }}
    {% endif %}
  </title>
  <meta name="description" content="{{ description }}">
  <meta name="author" content="{{ site.author }}">

  {# favicons #}
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/site.webmanifest">

  {# css #}
  {# fonts #}
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@600&display=swap" rel="stylesheet">

  {# shared styles #}

  {# aurum framework #}
  <link rel="stylesheet" type="text/css" href="https://au.goldenharpmedia.com/framework/packages/v1.1.1/au.css">
  {# <link href="https://www.au.goldenharpmedia.com/packages/vLatest" rel="stylesheet" type="text/css" /> #}

  {# site styles #}
  <link href="/css/general-styles.css" rel="stylesheet" type="text/css" />
	<link href="/css/hero-styles.css" rel="stylesheet" type="text/css" />
	<link href="/css/section-styles.css" rel="stylesheet" type="text/css" />
	<link href="/css/footer-styles.css" rel="stylesheet" type="text/css" />
  {# page styles #}
  {% if stylesheets %}
    <link href="{{ stylesheets }}" rel="stylesheet" type="text/css" />
  {% endif %}

  {# shared scripts #}
	<script src="/js/shared-scripts.js"></script>
  {# page scripts will be in HTML? #}
  {% if scripts %}
  <script src="{{ scripts }}"></script>
  {% endif %}

  {# initial load transition #}
	{# <style>
		.loading{
			opacity:0;
		}
	</style>
	<script>
		window.addEventListener("load", function(){
			document.body.classList.remove("loading");
		})
	</script> #}

	{# <noscript>
		<style>
			.loading{
				opacity:1;
			}
		</style>
	</noscript> #}

  {# hide JS only items when there isn't js #}
	{# <noscript>
		<style>
			.show-with-js{
				display:none;
			}
		</style>
	</noscript> #}

  {# other metadata #}
  {# mastodon #}
  <link rel="me" href="https://climatejustice.social/@samharp"/>
  {# indieauth login #}
	<link rel="me" href="https://github.com/samharp"/>
  {# webmentions #}
  <link rel="webmention" href="https://webmention.io/www.sammyharper.com/webmention" />

  {# analytics #}
  <script data-host="https://microanalytics.io" data-dnt="false" src="https://microanalytics.io/js/script.js" id="ZwSg9rf6GA" async defer></script>

</head>
<body data-theme="{{ defaults.uiTheme | default("system") }}">
  {# svg container component #}
  {% include "svgs.njk" %}

  {# noscript banner component #}
  {# <noscript> #}
  {% include "noscript-banner.njk" %}
  {# </noscript> #}

  <a name="top"></a>

  {# <header>
  </header> #}
  {{ content | safe }}

  {% include "footer.njk" %}
</body>
</html>